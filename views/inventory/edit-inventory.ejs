<h1><%- title%></h1>
<form action="/inv/update" id="updateForm" method="post">
    <label for="inv_make">Make: </label><br>
    <input type="text" id="inv_make" name="inv_make" required><br>

    <label for="inv_model">Model: </label><br>
    <input type="text" id="inv_model" name="inv_model" required><br>

    <label for="inv_year">Year: </label><br>
    <input type="number" id="inv_year" name="inv_year" required><br>

    <label for="inv_description">Description: </label><br>
    <input type="text" id="inv_description" name="inv_description" required><br>

    <label for="inv_image">Image URL: </label>
    <input type="text" id="inv_image" name="inv_image" required><br>

    <label for="inv_thumbnail">Thumbnail URL: </label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required><br>

    <label for="inv_price">Price: </label>
    <input type="number" id="inv_price" name="inv_price" required><br>

    <label for="inv_miles">Mileage: </label>
    <input type="number" id="inv_miles" name="inv_miles" required><br>

    <label for="inv_color">Color: </label>
    <input type="text" id="inv_color" name="inv_color" required><br>

    <%- inventoryClassificationList %>

    <input type="submit" name="submit" value="Update Vehicle" disabled>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <%} %>>
</form>
<% if (errors)  { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>